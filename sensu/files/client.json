{%- from "sensu/pillar_map.jinja" import sensu with context %}
{
  "client": {
    {% if sensu.client.add_machine_id -%}
    "name": "{{ grains['fqdn'] }}-{{ grains['machine_id'] }}",
    {% else -%}
    "name": {{ grains['fqdn']|json }},
    {% endif -%}
    "address": {{ grains['ipv4'][0]|json }},
    "subscriptions": [ "all" ]
  }
}
